@page
@model CreateModel
@{
    ViewData["Title"] = "Create Material";
}
<h2>Create</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Material" class="control-label"></label>
                <input asp-for="@Model.Material.Name" class="form-control" value="" />
                <span asp-validation-for="@Model.Material.Name" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


