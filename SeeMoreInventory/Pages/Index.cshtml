@page
@model SeeMoreInventory.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}

<div>
    <br />
    <br />
    <div class="scanner-ctrl">
        <form class="form-horizontal">
            <div class="form-group">
                <div class="row">
                    <span class="col-sm-1"></span>
                    <label class="col-sm-2 control-label">Product Label</label>
                    <div class="col-sm-2">
                        <input class="form-control" type="text" id="ProductLabelText" name="ProductLabel" onkeypress="return searchKeyPress(event)" />
                    </div>

                    <label class="col-sm-1 control-label" for="QTYtext">Quantity</label>
                    <div class="col-sm-1">
                        <input class="form-control" type="text" id="QTYtext" name="qty" value="-1" onkeypress="return searchKeyPress(event)" />
                    </div>
                    <div class="col-sm-2">
                        <button class="btn btn-sq" type="button" id="plus">+</button>
                        <button class="btn btn-sq" type="button" id="minus">-</button>
                    </div>
                    <button class="btn btn-primary" type="button" id="submit">Update</button>
                </div>
            </div>
        </form>
        <br />
        <div class="Report row">
            <hr />
            <ul class="ReportHeader">
                <li class="col-sm-1"></li>
                <li class="col-sm-1">ProductLabel</li>
                <li class="col-sm-1">Sphere</li>
                <li class="col-sm-1">Cylinder</li>
                <li class="col-sm-1">Axis</li>
                <li class="col-sm-1">Material</li>
                <li class="col-sm-2">Coating</li>
                <li class="col-sm-1">Transitions</li>
                <li class="col-sm-1">Quantity</li>
                <li class="col-sm-2">Remaining Quantity</li>
                <li class="col-sm-1"></li>
            </ul>
            <hr />
        </div>

        <div id="scanRows">
            <div>
                @foreach (var historyRecord in Model.LensHistory)
                {
                    <ul class="ReportRow">
                        <li class="col-sm-1"></li>
                        <li class="col-sm-1">@historyRecord.ProductLabel</li>
                        <li class="col-sm-1">@historyRecord.Sphere</li>
                        <li class="col-sm-1">@historyRecord.Cylinder</li>
                        <li class="col-sm-1">@historyRecord.Axis</li>
                        <li class="col-sm-1">@historyRecord.MaterialId</li>
                        @if (historyRecord.AntiReflectiveCoating)
                        {
                            <li class="col-sm-2">Anti-Reflective</li>
                        }
                        else
                        {
                            <li class="col-sm-2">None</li>
                        }
                        @if (historyRecord.Transitions)
                        {
                            <li class="col-sm-2">Transitions</li>
                        }
                        else
                        {
                            <li class="col-sm-2">None</li>
                        }
                        <li class="col-sm-1">@historyRecord.Quantity</li>
                        <li class="col-sm-2">@historyRecord.RemainingCount</li>
                        <li class="col-sm-1"></li>
                    </ul>
                    <hr>
                }
            </div>
        </div>
    </div>
</div>
